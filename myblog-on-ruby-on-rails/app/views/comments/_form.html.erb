<% if signed_in?%>
  <p> <%= current_user.name %> publish a comment! </p>
<% end %>
<%= form_for([post, comment]) do |f| %>
  <%= f.error_messages %>
  <% if signed_in? %>
     <%= hidden_field('user','user_id', :value => current_user.id) %>
  <% else %>
    <div class="field">
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :website %><br />
      <%= f.text_field :website %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :value => 'Write your comment here' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
